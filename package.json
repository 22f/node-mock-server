{
    "name": "node-mock-server",
    "license": "MIT",
    "devDependencies": {
        "chalk": "2.2.0",
        "chokidar": "1.7.0",
        "cliui": "3.2.0",
        "commander": "2.11.0",
        "husky": "0.14.3",
        "inquirer": "3.2.3",
        "lerna": "2.0.0",
        "lerna-changelog": "0.6.0",
        "lint-staged": "4.1.3",
        "make-dir": "1.0.0",
        "node-find-files": "0.0.4",
        "npm-run-all": "4.1.1",
        "prettier": "1.7.0",
        "rimraf": "2.6.1",
        "string-length": "2.0.0",
        "sync": "0.2.5"
    },
    "scripts": {
        "clean": "node_modules/.bin/lerna clean",
        "start": "lerna-terminal start",
        "dev": "lerna-terminal dev -i spectre-ui",
        "flow": "node_modules/.bin/lerna run flow",
        "test": "node_modules/.bin/lerna run test",
        "test:dev": "lerna-terminal test:dev",
        "bootstrap": "node_modules/.bin/lerna bootstrap --hoist",
        "lint": "node_modules/.bin/lerna run lint",
        "test": "node_modules/.bin/lerna run test",
        "prettier": "node_modules/.bin/prettier '{bin,__{tests,mocks}__}/**/*.js' --config package.json",
        "migrade": "node packages/migration-script-0.x.x-1.x.x -s packages/demo-data/data-v0.x.x -d packages/demo-data/.nodemockserver"
    },
    "lint-staged": {
        "*.js": ["prettier --trailing-comma es5 --single-quote --write", "git add"]
    }
}
