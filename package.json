{
    "name": "node-mock-server",
    "license": "MIT",
    "devDependencies": {
        "chalk": "2.2.0",
        "chokidar": "1.7.0",
        "cliui": "3.2.0",
        "commander": "2.11.0",
        "husky": "0.14.3",
        "inquirer": "3.2.3",
        "lerna": "2.0.0",
        "lerna-changelog": "0.6.0",
        "lerna-terminal": "1.1.1",
        "lint-staged": "4.1.3",
        "make-dir": "1.0.0",
        "node-find-files": "0.0.4",
        "npm-run-all": "4.1.1",
        "prettier": "1.7.0",
        "rimraf": "2.6.1",
        "string-length": "2.0.0",
        "sync": "0.2.5",
        "opn": "5.1.0",
        "execa": "0.8.0",
        "p-series": "1.0.0"
    },
    "scripts": {
        "clean": "node_modules/.bin/lerna clean",
        "prestart": "node bin/onBeforeStart.js",
        "start": "run-p start:*",
        "start:ui": "cd packages/ui && npm run start",
        "start:rest-api": "cd packages/rest-api && npm run start",
        "dev": "node_modules/.bin/lerna-terminal dev",
        "flow": "node_modules/.bin/lerna run flow",
        "flow-restart": "node_modules/.bin/lerna run flow-restart",
        "test": "node_modules/.bin/lerna run test",
        "test:dev": "node_modules/.bin/lerna-terminal test:dev",
        "bootstrap": "node_modules/.bin/lerna bootstrap --hoist",
        "lint": "node_modules/.bin/lerna run lint",
        "prettier": "node_modules/.bin/prettier '{bin,__{tests,mocks}__}/**/*.js' --config package.json"
    },
    "prettier": {
        "useTabs": true,
        "printWidth": 120,
        "tabWidth": 4,
        "singleQuote": true,
        "trailingComma": "es5",
        "bracketSpacing": true,
        "jsxBracketSameLine": false,
        "parser": "babylon",
        "semi": true
    },
    "lint-staged": {
        "*.js": ["prettier", "git add"]
    }
}
