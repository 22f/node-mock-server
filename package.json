{
    "license": "MIT",
    "devDependencies": {
        "commander": "^2.11.0",
        "husky": "^0.14.3",
        "lerna": "^2.0.0",
        "lerna-changelog": "^0.6.0",
        "lint-staged": "^4.1.3",
        "make-dir": "^1.0.0",
        "node-find-files": "0.0.4",
        "npm-run-all": "^4.0.2",
        "npm-watch": "^0.2.0",
        "prettier": "^1.6.1",
        "rimraf": "^2.6.1",
        "sync": "^0.2.5"
    },
    "watch": {
        "update-flow-types": {
            "patterns": ["packages"],
            "extensions": "flow",
            "quiet": false
        }
    },
    "scripts": {
        "start": "node packages/core",
        "dev": "run-p dev:* watch-flow-types",
        "dev:core": "cd packages/core && npm run start",
        "dev:uuid": "cd packages/uuid && npm run start",
        "dev:spectre-ui-watch": "cd packages/spectre-ui && npm run watch",
        "dev:spectre-ui-watch-doc": "cd packages/spectre-ui && run-p watch-example-code watch-props-doc",
        "dev:spectre-ui": "cd packages/spectre-ui && npm run storybook",
        "test": "npm-run-all test:*",
        "test:core": "cd packages/core && npm run test",
        "test:uuid": "cd packages/uuid && npm run test",
        "test:spectre-ui": "cd packages/spectre-ui && npm run test",
        "clear": "npm-run-all clear:*",
        "clear:eslint-config": "rimraf config/eslint-config/node_modules",
        "clear:node-flow-config": "rimraf config/node-flow-config/node_modules",
        "clear:core": "rimraf packages/core/node_modules",
        "clear:uuid": "rimraf packages/uuid/node_modules",
        "clear:spectre-ui": "rimraf packages/spectre-ui/node_modules",
        "clear:root": "rimraf node_modules",
        "prettier": "node_modules/.bin/prettier '{bin,__{tests,mocks}__}/**/*.js' --config package.json",
        "watch-flow-types": "npm-watch update-flow-types",
        "update-flow-types": "node bin/update-flow-typed"
    },
    "lint-staged": {
        "*.js": ["prettier --trailing-comma es5 --single-quote --write", "git add"]
    }
}
