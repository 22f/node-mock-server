{
    "license": "MIT",
    "devDependencies": {
        "commander": "^2.11.0",
        "husky": "^0.14.3",
        "lerna": "^2.0.0",
        "lerna-changelog": "^0.6.0",
        "lint-staged": "^4.1.3",
        "npm-run-all": "^4.0.2",
        "npm-watch": "^0.2.0",
        "prettier": "^1.6.1",
        "rimraf": "^2.6.1"
    },
    "scripts": {
        "start": "node packages/core",
        "dev": "run-p dev:*",
        "dev:core": "cd packages/core && npm run start",
        "dev:uuid": "cd packages/uuid && npm run start",
        "test": "npm-run-all test:*",
        "test:core": "cd packages/core && npm run test",
        "test:uuid": "cd packages/uuid && npm run test",
        "clear": "npm-run-all clear:*",
        "clear:eslint-config": "rimraf config/eslint-config/node_modules",
        "clear:node-flow-config": "rimraf config/node-flow-config/node_modules",
        "clear:core": "rimraf packages/core/node_modules",
        "clear:uuid": "rimraf packages/uuid/node_modules",
        "clear:root": "rimraf node_modules",
        "prettier": "node_modules/.bin/prettier '{bin,__{tests,mocks}__}/**/*.js' --config package.json"
    },
    "lint-staged": {
        "*.js": ["prettier --trailing-comma es5 --single-quote --write", "git add"]
    }
}
